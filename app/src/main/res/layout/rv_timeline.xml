<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/timeline_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/timeline_line">

    </LinearLayout>

    <View
        android:id="@+id/timeline_line"
        android:layout_width="1px"
        android:background="#eee"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/timeline_date"/>

    <com.gravity.oncepayment.Utilities.VerticalTextView
        android:id="@+id/timeline_date"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#135C0E"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:includeFontPadding="false"
        android:textColor="#666"
        android:backgroundTint="#f8f8f8"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"/>

</RelativeLayout>